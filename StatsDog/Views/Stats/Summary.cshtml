@using StatsDog.Models

@model StatsSummary

@{
  ViewBag.Title = "Summary";
}

<br />
<p>@Html.ActionLink("Detail", "Index")</p>

<p>
  <table class="table" style="width: 40%;">
    <caption><b>General</b></caption>
    <tr>
      <td style="width: 75%;">@Html.DisplayNameFor(model => model.AverageUniqueSourcesPerDay):</td>
      <td style="text-align: center;">@Model.AverageUniqueSourcesPerDay.ToString()</td>
    </tr>
  </table>
</p>

<p>
  <table class="table" style="width: 40%;">
    <caption><b>Recent unique sources per day</b></caption>
    <tr>
      <th style="width: 75%;">Date</th>
      <th style="text-align: center;">Count</th>
    </tr>
    @foreach (StatsSummary.UniqueSourceCountByDate row in @Model.RecentUniqueSourcesPerDay)
    {
      <tr>
        <td>@row.Date.ToString("yyyy-MM-dd (ddd)")</td>
        <td style="text-align: center;">@row.Count</td>
      </tr>
    }
  </table>
</p>

<p>
  <table class="table" style="width: 40%;">
    <caption><b>Unique source count by version</b></caption>
    <tr>
      <th style="width: 75%;">Date</th>
      <th style="text-align: center;">Count</th>
    </tr>
    @foreach (StatsSummary.SourceCountPerApplicationVersion row in @Model.SourceCountByVersion)
    {
      <tr>
        <td>@row.ApplicationVersion</td>
        <td style="text-align: center;">@row.Count</td>
      </tr>
    }
  </table>
</p>